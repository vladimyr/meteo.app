bg-color = #efeeee
text-color = #1f384d
report-bg-color = #f7f6f5
report-border-color = #c8c8c8
high-temp-color = #1f384d
low-temp-color = #999

*
  box-sizing border-box

html, body
  padding 0
  margin 0
  bakground bg-color
  font-family "Helvetica Neue",Helvetica,Arial,sans-serif

.cities
  padding 10px

  label
    font-size 0.875em
    font-weight 700
    color text-color
    margin-right 10px

  select
    font-size 0.875em
    padding 2px
    background none
    border 1px solid report-border-color
    border-radius 2px
    outline none

.reports
  background bg-color
  padding 0 10px
  overflow auto
  font-size .875em

.report
  clear both
  margin 8px 0

  .date
    font-weight 700
    color text-color
    margin 2px 4px
    display block

.forecasts
  list-style none
  padding 0
  margin 0
  border 1px solid report-border-color
  border-left none
  overflow auto
  display inline-block

  .forecast
    background report-bg-color
    float left
    min-width 80px
    padding 8px 4px
    border-left 1px solid report-border-color

.temperature
  font-size 1.143em
  text-align center

  .low
    vertical-align top
    display inline-block
    position relative
    top 2px
    color low-temp-color

  .high
    font-size 160%
    vertical-align top
    display inline-block
    color high-temp-color
